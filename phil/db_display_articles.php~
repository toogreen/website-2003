<?
$username="root";
$password="";
$database="phil_test1";
// Connection a MySQL
$link = mysql_connect(localhost,$username,$password);
if (!$link) {
   die('Could not connect: ' . mysql_error());
}
echo 'Connected successfully';

//Sélection de la base de données
@mysql_select_db($database) or die( "Unable to select database");

//Sélection de tous les champs de la table "contact"
$query="SELECT * FROM articles";
$result=mysql_query($query);

$num=mysql_numrows($result);

mysql_close();

echo "<b><center>Database Output</center></b><br><br>";

$i=0;
while ($i < $num) {

$cat=mysql_result($result,$i,"cat");
$intro=mysql_result($result,$i,"intro");
$full=mysql_result($result,$i,"full");
$link=mysql_result($result,$i,"link");

echo <br>Categorie: $cat<br>Intro: $intro<br>Texte complet: $full<br>Lien: $link<br><hr><br>";

++$i;
}

?>
